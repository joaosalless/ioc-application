{
  "compilerOptions": {
      "target": "ES2017",
      "lib": ["es6", "dom"],
      "types": ["reflect-metadata", "jest"],
      "pretty": true,
      "sourceMap": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "baseUrl": "./src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "./dist",
  ]
}